{
  "name": "Spark",
  "productName": "Spark Payments",
  "version": "1.0.0",
  "description": "An external terminal application for processing DASH payments in brick and mortar stores.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "package-mac": "electron-packager . --overwrite --asar=true --platform=darwin --arch=x64 --icon=assets/icons/mac/icon.icns --prune=true --out=dist",
    "package-win": "electron-packager . spark-dash --overwrite --asar=true --platform=win32 --arch=ia32 --icon=assets/icons/win/icon.ico --prune=true --out=dist --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"Spark Payments\"",
    "package-linux": "electron-packager . spark-dash --overwrite --asar=true --platform=linux --arch=x64 --icon=assets/icons/png/1024x1024.png --prune=true --out=dist",
    "create-debian-installer": "electron-installer-debian --src dist/spark-dash-linux-x64 --arch x64 --config debian.json"
  },
  "repository": "https://github.com/kodaxx/spark-payments-dash",
  "keywords": [
    "Spark"
  ],
  "author": "kodaxx",
  "license": "MIT",
  "devDependencies": {
    "electron": "^2.0.0",
    "electron-installer-debian": "^0.8.1",
    "electron-packager": "^12.1.0"
  },
  "dependencies": {
    "npm": "^6.2.0"
  }
}
